{
  "name": "Flutter Web + Android Build (Fixed)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "dart.lineLength": 100,
        "dart.flutterHotReloadOnSave": true
      }
    }
  },
  "forwardPorts": [
    5173
  ],
  "portsAttributes": {
    "5173": {
      "label": "Flutter Web",
      "onAutoForward": "openBrowser"
    }
  },
  "remoteEnv": {
    "PATH": "/opt/flutter/bin:/opt/android-sdk/platform-tools:/opt/android-sdk/cmdline-tools/latest/bin:${containerEnv:PATH}",
    "ANDROID_SDK_ROOT": "/opt/android-sdk",
    "ANDROID_HOME": "/opt/android-sdk",
    "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-amd64"
  },
  "postCreateCommand": "sudo bash .devcontainer/scripts/install_flutter.sh && sudo bash .devcontainer/scripts/install_android.sh && flutter --version && flutter precache --web && flutter doctor -v"
}